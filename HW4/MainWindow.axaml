<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

		xmlns:local="clr-namespace:HW4"
		
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HW4.MainWindow"
        Title="HW4"

        x:DataType="local:FileSystemViewModel">

    <Window.DataContext>
		<local:FileSystemViewModel/>
	</Window.DataContext>
	<!-- <Design.DataContext>
        <local:FileSystemViewModel/>
    </Design.DataContext> -->

	<ListBox ItemsSource="{Binding FileSystemEntries}" SelectedItem="{Binding SelectedEntry}" Tapped="TapOnSquare">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Icon}" Width="16" Height="16" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
</Window>